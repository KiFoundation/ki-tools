[Unit]
Description=kitoolscli
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=kid
Group=kid
PermissionsStartOnly=true
ExecStart=/usr/bin/kitoolscli rest-server --laddr {{GAIACLI_ADDRESS}}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target

